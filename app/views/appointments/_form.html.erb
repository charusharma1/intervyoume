<section>
      <div class="row">
        <div class="col-sm-9">
          <div class="taco_single">
          <ul>
            <% if @product && @product.errors.any? %>
              <% @product.errors.full_messages.each do |message| %>
                <li class="bad-taco"><%= message %></li>
              <% end %>
            <% end %>
          </ul>
            <h1>Create a new recipe:</h1>

            <%= form_for @product do |f| %>

            <div>
              <%= f.label :name %>
              <%= f.text_field :name %>
            </div>
            <div>
              <%= f.label :price %>
              <%= f.text_field :price %>
            </div>
            <div>
              <%= f.label :description %>
              <%= f.text_field :description %>
            </div>
            <div>
              <%= f.label :rating %>
              <%= f.text_field :rating %>
            </div>
            <div>
              <%= f.label :supplier %>
              <%= f.collection_select :supplier_id, Supplier.all, :id, :name %>
            </div>
            <div>
              <%= f.fields_for :images do |ff| %>
                <div>
                  <%= ff.label :image_url %>
                  <%= ff.text_field :image_url %>
                </div>
              <% end %>
            </div>
            <div>
              <%= f.fields_for :images do |ff| %>
                <div>
                  <%= ff.label :image_url %>
                  <%= ff.text_field :image_url %>
                </div>
              <% end %>
            </div>
            <%= f.submit %>
            <% end %>
          </div>
        </div>
      </div>
    </section>